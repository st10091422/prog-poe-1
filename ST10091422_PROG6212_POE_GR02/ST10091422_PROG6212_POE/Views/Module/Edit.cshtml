@model ST10091422_PROG6212_POE.Models.Module

@{
    ViewData["Title"] = "Edit";
}

<style>
    .glass-bg {
        background: linear-gradient(to right bottom,rgba(255, 255, 255, 0.4), rgba(255, 255, 255, 0.7)); /* Adjust the alpha (4th value) for transparency */
        border-radius: 10px;
        padding: 20px;
        margin-top: 50px; /* Adjust the margin for spacing from the top */
    }
</style>

<div class="row justify-content-center">
    <div class="col-md-4 glass-bg">
        <div style="display:flex; align-items:center; justify-content:center">
            <h1 style="color:#fff; padding: 1em 0em">Update Module: @ViewData["module"]</h1>
        </div>
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ModuleId" />
            
            <div class="form-group">
                <label asp-for="NumberOfHours" class="control-label"></label>
                <input asp-for="NumberOfHours" class="form-control" />
                <span asp-validation-for="NumberOfHours" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CurrentDate" class="control-label"></label>
                <input type="date" asp-for="CurrentDate" class="form-control" />
                <span asp-validation-for="CurrentDate" class="text-danger"></span>
            </div>
            
            <div class="form-group" style="display:flex; align-items:center; justify-content:space-evenly;">
                <input type="submit" value="Save" class="btn btn-primary" />
                <a asp-controller="Semester" asp-action="Index" class="btn btn-warning">Back to List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
